###############################################################################
# LatePoint Telegram Bot - Environment Variables Template
#
# ВАЖНО: Этот файл является шаблоном!
#
# Для использования:
# 1. Скопируйте: cp .env.example .env
# 2. Заполните реальными значениями в .env
# 3. НЕ коммитьте .env в Git!
###############################################################################

# ============================================================================
# TELEGRAM BOT
# ============================================================================

# Токен Telegram бота (получите от @BotFather)
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ID администраторов бота (через запятую)
# Получить свой ID: отправьте /start боту @userinfobot
ADMIN_IDS=123456789,987654321

# ============================================================================
# WORDPRESS INTEGRATION
# ============================================================================

# URL вашего WordPress сайта
WP_SITE_URL=https://blagovest.net

# API endpoint (обычно не нужно менять)
WP_API_URL=https://blagovest.net/wp-json/latepoint-telegram/v1

# WordPress Nonce (если используется)
WP_NONCE=

# WordPress API Key (если настроена дополнительная аутентификация)
WP_API_KEY=

# ============================================================================
# SECURITY
# ============================================================================

# Webhook Secret - секретный ключ для вебхуков от WordPress
# Сгенерируйте: openssl rand -hex 32
WEBHOOK_SECRET=your_super_secret_webhook_key_here_change_this

# Разрешенные IP для webhook endpoint (через запятую, пустое = все разрешены)
ALLOWED_IPS=

# ============================================================================
# DATABASE
# ============================================================================

# URL базы данных (SQLite по умолчанию)
DATABASE_URL=sqlite+aiosqlite:///bot_data.db

# Автоматически создавать таблицы при старте (true/false)
AUTO_CREATE_TABLES=true

# ============================================================================
# WEB SERVER
# ============================================================================

# Host для bind сервера (0.0.0.0 = все интерфейсы)
HOST=0.0.0.0

# Port сервера
PORT=8000

# URL для Telegram webhooks (если используется webhook mode)
WEBHOOK_URL=https://yourdomain.com/webhook/

# ============================================================================
# LOGGING
# ============================================================================

# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Максимальный размер файла логов в байтах (по умолчанию 10MB)
LOG_MAX_BYTES=10485760

# Количество backup файлов логов
LOG_BACKUP_COUNT=5

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Режим работы: development или production
MODE=production

# Включить режим отладки (true/false)
DEBUG=false

# Часовой пояс
TIMEZONE=Europe/Moscow

# Язык по умолчанию
DEFAULT_LANGUAGE=ru

# ============================================================================
# NOTIFICATIONS
# ============================================================================

# Включить автоматические напоминания (true/false)
ENABLE_AUTO_REMINDERS=true

# Интервал проверки предстоящих событий (в секундах)
CHECK_INTERVAL=60

# ============================================================================
# REDIS (опционально)
# ============================================================================

# Использовать Redis для кеширования (true/false)
USE_REDIS=false

# URL Redis сервера
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# RATE LIMITING
# ============================================================================

# Максимальное количество запросов в минуту на пользователя
RATE_LIMIT_PER_USER=30

# ============================================================================
# FEATURES
# ============================================================================

# Включить веб-интерфейс для мониторинга (true/false)
ENABLE_WEB_DASHBOARD=false

# Таймаут для HTTP запросов к WordPress (в секундах)
HTTP_TIMEOUT=30
